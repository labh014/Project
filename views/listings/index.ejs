<% layout("/layouts/boilerplate") %>
<body>
    <h3>All Listings</h3><br>
    <!-- <form method="GET" action="/listings/new" >
        <button>Create New list</button>
    </form> -->

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(listing of allListings){ %>
            <a href="/listings/<%= listing._id %>" class="list-link">
                <div class="card col listing-card" style="width:auto;">
                    <img src="<%= listing.image %>" class="card-img-top" alt="listing_img" style="height: 18rem;"/>
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-title"><b><%= listing.title %></b> <br>
                      &#8377;<%= listing.price.toLocaleString("en-IN") %>/night </p>
                    </div>
                </div>
            </a>          
            <% } %>
    </div>

    
    
